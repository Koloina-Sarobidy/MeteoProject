@* @using StationControl.Models.Station
@using StationControl.Models.Inventaire
@model StationBesoinsViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Suggestion de planification";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-primary">
                <i class="bi bi-lightning-charge me-2"></i> Suggestion de planification @Model.Station.Nom
            </h5>
        </div>

        <div class="card-body">
            @if (Model.Besoins == null || !Model.Besoins.Any())
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle me-2"></i>
                    Aucun besoin à planifier selon le budget fourni.
                </div>
            }
            else
            {
                <form action="/Admin/Intervention/PlanifierBesoins" method="post">
                    <input type="hidden" name="stationId" value="@Model.Station.Id" />

                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Date prévue début</label>
                        <div class="col-sm-4">
                            <input type="date" name="dateDebut" class="form-control" required />
                        </div>
                        <label class="col-sm-2 col-form-label">Date prévue fin</label>
                        <div class="col-sm-4">
                            <input type="date" name="dateFin" class="form-control" required />
                        </div>
                    </div>

                    <div class="table-responsive mb-3">
                        <table class="table table-striped table-bordered align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:5%">
                                        <input type="checkbox" id="selectAll" onclick="toggleAll()" />
                                    </th>
                                    <th style="width:25%">Équipement</th>
                                    <th style="width:25%">Besoin</th>
                                    <th style="width:45%">Description du problème</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var besoin in Model.Besoins)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="selectedIds" value="@besoin.EquipementStationId" class="selectRow" />
                                        </td>
                                        <td>@besoin.EquipementStationId</td>
                                        <td>@(besoin.EquipementBesoin?.Libelle ?? "-")</td>
                                        <td>@besoin.DescriptionProbleme</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-calendar-event me-2"></i> Planifier
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleAll() {
            const master = document.getElementById("selectAll");
            const checkboxes = document.querySelectorAll(".selectRow");
            checkboxes.forEach(cb => cb.checked = master.checked);
        }
    </script>
} *@
