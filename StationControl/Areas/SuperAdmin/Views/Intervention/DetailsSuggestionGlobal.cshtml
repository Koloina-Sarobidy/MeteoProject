@* @using StationControl.Models.Station
@using StationControl.Models.Inventaire
@model List<StationBesoinsViewModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Suggestion de planification";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0 text-primary">
                <i class="bi bi-lightning-charge me-2"></i> Suggestion de planification globale
                @if (ViewBag.BudgetGlobal != null)
                {
                    <small class="text-muted">(Budget global: @ViewBag.BudgetGlobal €)</small>
                }
            </h5>
        </div>

        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    Aucune station à afficher.
                </div>
            }
            else
            {
                @foreach (var stationModel in Model)
                {
                    var station = stationModel.Station;
                    var besoins = stationModel.Besoins ?? new List<InventaireDetails>();

                    <div class="mb-5">
                        <h6 class="text-secondary fw-bold mb-3">
                            <i class="bi bi-geo-alt me-1"></i> @station?.Nom
                            <small class="text-muted">(@station?.Region?.Libelle)</small>
                        </h6>

                        @if (!besoins.Any())
                        {
                            <div class="alert alert-success py-2 px-3 mb-4">
                                <i class="bi bi-check-circle me-2"></i>
                                Aucun besoin à planifier pour cette station.
                            </div>
                        }
                        else
                        {
                            <form action="/Admin/Intervention/PlanifierBesoins" method="post" class="mb-4">
                                <input type="hidden" name="stationId" value="@station.Id" />

                                <div class="mb-3 row">
                                    <label class="col-sm-2 col-form-label">Date prévue début</label>
                                    <div class="col-sm-4">
                                        <input type="date" name="dateDebut" class="form-control" required />
                                    </div>
                                    <label class="col-sm-2 col-form-label">Date prévue fin</label>
                                    <div class="col-sm-4">
                                        <input type="date" name="dateFin" class="form-control" required />
                                    </div>
                                </div>

                                <div class="table-responsive mb-3">
                                    <table class="table table-striped table-bordered align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th style="width:5%">
                                                    <input type="checkbox" id="selectAll_@station.Id" onclick="toggleAll(@station.Id)" />
                                                </th>
                                                <th style="width:25%">Équipement</th>
                                                <th style="width:25%">Besoin</th>
                                                <th style="width:45%">Description du problème</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var besoin in besoins)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" name="selectedIds" value="@besoin.EquipementStationId" class="selectRow_@station.Id" />
                                                    </td>
                                                    <td>@besoin.EquipementStationId</td>
                                                    <td>@(besoin.EquipementBesoin?.Libelle ?? "-")</td>
                                                    <td>@besoin.DescriptionProbleme</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <div class="text-end mt-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-calendar-event me-2"></i> Planifier cette station
                                    </button>
                                </div>
                            </form>
                        }
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleAll(stationId) {
            const master = document.getElementById(`selectAll_${stationId}`);
            const checkboxes = document.querySelectorAll(`.selectRow_${stationId}`);
            checkboxes.forEach(cb => cb.checked = master.checked);
        }
    </script>
} *@
