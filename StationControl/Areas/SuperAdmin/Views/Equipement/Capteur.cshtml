@using StationControl.Models.Equipement
@{
    Layout = "~/Areas/SuperAdmin/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "Liste Capteurs";
}

<!-- Affichage des messages TempData -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-1"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
    </div>
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-primary">
                <i class="bi bi-list"></i> Liste des Capteurs
            </h5>
            <div>
                <button type="button" class="btn btn-outline-secondary me-2" onclick="history.back()">
                    <i class="bi bi-arrow-left"></i> Retour
                </button>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCapteurModal">
                    <i class="bi bi-plus-circle"></i> Nouveau Capteur
                </button>
            </div>
        </div>

        <div class="card-body">
            @if (ViewBag.Capteurs != null && (ViewBag.Capteurs as List<Capteur>).Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Désignation</th>
                                <th>Paramètre mesuré</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var capteur in ViewBag.Capteurs as List<Capteur>)
                            {
                                <tr>
                                    <td>@capteur.Libelle</td>
                                    <td>@capteur.Parametre</td>
                                </tr>  
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">Aucun Capteur disponible.</p>
            }
        </div>
    </div>
</div>

<!-- Modal Ajout Capteur -->
<div class="modal fade" id="addCapteurModal" tabindex="-1" aria-labelledby="addCapteurModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0">
            <div class="modal-header bg-primary text-white">
                <h6 class="modal-title" id="addCapteurModalLabel">
                    <i class="bi bi-plus-circle"></i> Nouveau Capteur
                </h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <form id="capteurForm" action="@Url.Action("InsertCapteur", "Equipement", new { area = "SuperAdmin" })" method="post">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="libelle" class="form-label fw-semibold">Désignation</label>
                            <input type="text" class="form-control" id="libelle" name="Libelle" placeholder="Ex: Thermomètre" required>
                        </div>
                        <div class="col-md-6">
                            <label for="parametre" class="form-label fw-semibold">Paramètre mesuré</label>
                            <input type="text" class="form-control" id="parametre" name="Parametre" placeholder="Ex: Température" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle"></i> Annuler
                        </button>
                        <button type="button" class="btn btn-primary" id="showConfirmCapteurBtn">
                            <i class="bi bi-save"></i> Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Confirmation -->
<div class="modal fade" id="confirmInsertCapteurModal" tabindex="-1" aria-labelledby="confirmInsertCapteurModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0">
             <div class="modal-header">
                <h5 class="modal-title text-primary" id="confirmModalLabel"><i class="bi bi-exclamation-triangle"></i> Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir ajouter ce capteur ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal"><i class="bi bi-x-circle"></i> Annuler</button>
                <button type="button" class="btn btn-primary" id="confirmInsertCapteurBtn"><i class="bi bi-check-circle"></i> Ajouter</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const showConfirmBtn = document.getElementById("showConfirmCapteurBtn");
        const confirmModal = new bootstrap.Modal(document.getElementById("confirmInsertCapteurModal"));
        const confirmInsertBtn = document.getElementById("confirmInsertCapteurBtn");
        const form = document.getElementById("capteurForm");

        showConfirmBtn.addEventListener("click", function () {
            confirmModal.show();
        });

        confirmInsertBtn.addEventListener("click", function () {
            form.submit();
        });
    });
</script>
}
