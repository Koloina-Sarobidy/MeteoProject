@{
    Layout = "~/Areas/SuperAdmin/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "Liste CRM";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-1"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
    </div>
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-primary">
                <i class="bi bi-list"></i> Liste des CRM
            </h5>
            <div>
                <button type="button" class="btn btn-outline-secondary me-2" onclick="history.back()">
                    <i class="bi bi-arrow-left"></i> Retour
                </button>
                <a href="@Url.Action("Ajout", "Crm", new { area = "SuperAdmin" })" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nouveau CRM
                </a>
            </div>
        </div>

        <div class="card-body">
            <!-- Filtre -->
            <form method="get" action="@Url.Action("Liste", "Crm", new { area = "SuperAdmin" })" class="row g-3 align-items-end mb-3">
                <div class="col-md-4">
                    <label class="form-label">Nom du CRM</label>
                    <input type="text" name="libelle" class="form-control" placeholder="Ex: CRM Antalaha" value="@ViewData["libelle"]">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Date de début</label>
                    <input type="date" name="dateCreation" class="form-control" value="@ViewData["dateCreation"]">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Statut</label>
                    <select name="statut" class="form-select">
                        <option value="">-- Tous --</option>
                        <option value="false" @(Convert.ToString(ViewData["statut"]) == "false" ? "selected" : "")>Actif</option>
                        <option value="true" @(Convert.ToString(ViewData["statut"]) == "true" ? "selected" : "")>Arrêté</option>
                    </select>
                </div>
                <div class="col-12 d-flex gap-2 mt-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel"></i> Filtrer
                    </button>
                    <a href="@Url.Action("Liste", "Crm", new { area = "SuperAdmin" })" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-counterclockwise"></i> Réinitialiser
                    </a>
                </div>
            </form>

            <!-- Liste des CRM -->
            @if (ViewBag.Crms != null && (ViewBag.Crms as List<StationControl.Models.Crm.Crm>).Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Libellé</th>
                                <th>Date de création</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var crm in ViewBag.Crms as List<StationControl.Models.Crm.Crm>)
                            {
                                <tr style="cursor:pointer;" onclick="window.location='@Url.Action("Details", "Crm", new { area = "SuperAdmin", id = crm.Id })'">
                                    <td>@crm.Libelle</td>
                                    <td>@crm.DateDebut.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (crm.EstArrete.GetValueOrDefault())
                                        {
                                            <span class="badge bg-danger">Arrêté</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Actif</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">Aucun CRM disponible.</p>
            }
        </div>
    </div>
</div>
