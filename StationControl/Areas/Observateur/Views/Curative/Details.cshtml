@using StationControl.Models.Besoin
@model BesoinStation
@using System

@{
    Layout = "~/Areas/Observateur/Views/Shared/_LayoutObservateur.cshtml";
    ViewData["Title"] = "Détails du besoin";
    var intervention = ViewBag.Intervention as StationControl.Models.Intervention.Intervention;
    var utilisateurs = ViewBag.Utilisateurs as List<StationControl.Models.Auth.Utilisateur>;

    bool isRemplacement = Model.EquipementBesoin?.Libelle?.ToLower() == "remplacement";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-primary">
                <i class="bi bi-exclamation-triangle me-2"></i>
                Interventions planifiées
            </h5>
            <button type="button" class="btn btn-outline-secondary me-2" onclick="history.back()">
                <i class="bi bi-arrow-left"></i> Retour
            </button>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Station</dt>
                <dd class="col-sm-9">@Model.Station?.Nom</dd>

                <dt class="col-sm-3">Équipement</dt>
                <dd class="col-sm-9">
                    @(Model.AlimentationStation?.Alimentation.Libelle ?? Model.CapteurStation?.Capteur.Libelle)
                    (@(Model.AlimentationStation?.NumSerie ?? Model.CapteurStation?.NumSerie))
                </dd>

                <dt class="col-sm-3">Type de besoin</dt>
                <dd class="col-sm-9">@Model.EquipementBesoin?.Libelle</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.DescriptionProbleme</dd>
            </dl>

            @if (intervention != null)
            {
                <h6 class="text-primary mt-4">Intervention associée</h6>
                <dl class="row">
                    <dt class="col-sm-3">Date planifiée début</dt>
                    <dd class="col-sm-3">@intervention.DatePlanifieeDebut.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-3">Date planifiée fin</dt>
                    <dd class="col-sm-3">@intervention.DatePlanifieeFin?.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-3">Technicien planifié</dt>
                    <dd class="col-sm-3">@intervention.TechnicienPlanifie</dd>

                    <dt class="col-sm-3">Statut intervention</dt>
                    <dd class="col-sm-3">
                        @if (!string.IsNullOrEmpty(intervention.Statut))
                        {
                            var badgeClass = intervention.Statut switch
                            {
                                "Planifiée" => "bg-secondary",
                                "En Cours" => "bg-warning text-dark",
                                "Terminée" => "bg-success",
                                _ => "bg-secondary"
                            };
                            <span class="badge @badgeClass">@intervention.Statut</span>
                        }
                    </dd>
                </dl>

                @* BOUTONS *@
                @if (!intervention.DateEffectiveDebut.HasValue && !intervention.DateEffectiveFin.HasValue)
                {
                    <button type="button" class="btn btn-success mt-3"
                            onclick="document.getElementById('formEffectuer').style.display='block'">
                        <i class="bi bi-check2-circle"></i> Effectuer l'intervention
                    </button>
                }
                @if (intervention.DateEffectiveDebut.HasValue && !intervention.DateEffectiveFin.HasValue)
                {
                    <button type="button" class="btn btn-success mt-3"
                            onclick="document.getElementById('formEffectuer').style.display='block'">
                        <i class="bi bi-check2-circle"></i> Terminer
                    </button>
                }

                <div id="formEffectuer" class="mt-4" style="display:none;">
                    @if (intervention.Statut == "Planifiée")
                    {
                        <form method="post" action="@Url.Action("Effectuer", "Curative", new { area = "Observateur", id = intervention.Id })">
                            <input type="hidden" name="besoinId" value="@Model.Id" />

                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Date effective début</label>
                                    <input type="date" name="dateDebut" class="form-control" required />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Date effective fin</label>
                                    <input type="date" name="dateFin" class="form-control" />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Exécuteur</label>
                                    <input type="text" name="executeur" class="form-control" />
                                </div>

                                @* CHAMP POUR REMPLACEMENT *@
                                @if (isRemplacement)
                                {
                                    <div class="col-md-4">
                                        <label class="form-label">Nouveau numéro de série</label>
                                        <input type="text" name="nouveauNumSerie" class="form-control" required />
                                    </div>
                                }
                            </div>

                            <button type="submit" class="btn btn-primary mt-3">
                                <i class="bi bi-save"></i> Enregistrer
                            </button>
                        </form>
                    }
                    else
                    {
                        <form method="post" action="@Url.Action("Terminer", "Curative", new { area = "Observateur", id = intervention.Id })">
                            <input type="hidden" name="besoinId" value="@Model.Id" />
                            <input type="hidden" name="dateDebut" value="@intervention.DateEffectiveDebut?.ToString("yyyy-MM-dd")" />

                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Date effective fin</label>
                                    <input type="date" name="dateFin" class="form-control" required />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Exécuteur</label>
                                    <input type="text" name="executeur" class="form-control" value="@intervention.TechnicienPlanifie" />
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary mt-3">
                                <i class="bi bi-check2-circle"></i> Terminer
                            </button>
                        </form>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info mt-3">
                    Aucune intervention planifiée pour ce besoin.
                </div>
            }
        </div>
    </div>
</div>
