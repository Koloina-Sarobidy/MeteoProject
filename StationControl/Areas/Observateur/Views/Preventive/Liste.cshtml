@model List<StationControl.Models.Intervention.Preventive>

@{
    Layout = "~/Areas/Observateur/Views/Shared/_LayoutObservateur.cshtml";
    ViewData["Title"] = $"Interventions préventives - {ViewBag.StationNom}";
}

<style>
    .table.table-striped tbody tr {
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    .table.table-striped tbody tr:hover td {
        background-color: #e2f0ff !important; 
    }
</style>

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-primary">
                <i class="bi bi-calendar-check me-2"></i> Interventions préventives - @ViewBag.StationNom
            </h5>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="history.back()">
                    <i class="bi bi-arrow-left me-1"></i> Retour
                </button>
            </div>
        </div>

        <div class="card-body">

            <!-- Formulaire de filtre par date -->
            <form method="get" class="row g-3 mb-4 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Date prévue début</label>
                    <input type="date" name="dateDebut" 
                           value="@(ViewData["dateDebut"] is DateTime dDebut ? dDebut.ToString("yyyy-MM-dd") : "")" 
                           class="form-control" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date prévue fin</label>
                    <input type="date" name="dateFin" 
                           value="@(ViewData["dateFin"] is DateTime dFin ? dFin.ToString("yyyy-MM-dd") : "")" 
                           class="form-control" />
                </div>
                <div class="col-md-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1">
                        <i class="bi bi-funnel me-1"></i> Filtrer
                    </button>
                    <a href="@Url.Action("Liste", "Preventive", new { area = "Observateur" })" class="btn btn-outline-secondary flex-grow-1">
                        <i class="bi bi-arrow-counterclockwise me-1"></i> Réinitialiser
                    </a>
                </div>
            </form>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-1"></i> Aucune intervention préventive pour cette période.
                </div>
            }
            else
            {
                <div class="table-responsive" style="max-height: 450px; overflow-y: auto;">
                    <table class="table table-striped table-bordered align-middle mb-0">
                        <thead class="table-light" style="position: sticky; top: 0; z-index: 5;">
                            <tr>
                                <th>Date prévue</th>
                                <th>Date effective</th>
                                <th>Utilisateur planificateur</th>
                                <th>Utilisateur effectif</th>
                                <th>Description</th>
                                <th>État</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr onclick="location.href='@Url.Action("Details", "Preventive", new { area = "Observateur", id = p.Id })'">
                                    <td>
                                        @p.DatePrevueDebut.ToString("dd/MM/yyyy")
                                        @if (p.DatePrevueFin.HasValue)
                                        {
                                            <text> - @p.DatePrevueFin.Value.ToString("dd/MM/yyyy")</text>
                                        }
                                    </td>
                                    <td>
                                        @(p.DateEffectiveDebut?.ToString("dd/MM/yyyy") ?? "-")
                                        @if (p.DateEffectiveFin.HasValue)
                                        {
                                            <text> - @p.DateEffectiveFin.Value.ToString("dd/MM/yyyy")</text>
                                        }
                                    </td>
                                    <td>@p.UtilisateurPlanificateur?.Nom @p.UtilisateurPlanificateur?.Prenom</td>
                                    <td>@p.UtilisateurEffectif?.Nom @p.UtilisateurEffectif?.Prenom</td>
                                    <td>@p.Description</td>
                                    <td>
                                        @if (p.EstAnnule)
                                        {
                                            <span class="badge bg-danger">Annulé</span>
                                        }
                                        else if (p.EstComplete)
                                        {
                                            <span class="badge bg-success">Complété</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">En attente</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == (int)ViewBag.Page ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Liste", "Preventive", new { 
                                    area = "Observateur", 
                                    dateDebut = ViewData["dateDebut"], 
                                    dateFin = ViewData["dateFin"], 
                                    page = i })">
                                    @i
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
